<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:text="@string/playlist_adding_label"
        android:textSize="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:paddingBottom="40dp"
        android:layout_height="wrap_content">

        <TextView android:text="@string/playlist_adding_name"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/playlist_editName"
            android:background="@color/gray"
            android:textSize="20dp"
            android:layout_width="210dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button android:id="@+id/playlist_adding_button"
        android:text="@string/playlist_adding_button"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>